<!-- at http://www.qos.ch/mailman/listinfo/logback-user             -->
<!--                                                                -->
<!-- For professional support please see                            -->
<!--    http://www.qos.ch/shop/products/professionalSupport         -->
<!--                                                                -->
<configuration>
    <appender name="D" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
        <!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
        <!--for further documentation-->
        <Append>true</Append>
        <File>G:/logs/error.log</File>
        <encoder>
            <pattern>%-d{yyyy-MM-dd HH:mm:ss} [ %t:%r ] - [ %p ] %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>
    <appender name="E" class="ch.qos.logback.core.FileAppender">
        <Append>true</Append>
        <File>G:/logs/logs.log</File>
        <encoder>
            <pattern>%-d{yyyy-MM-dd HH:mm:ss} [ %t:%r ] - [ %p ] %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>
    <appender name="F" class="ch.qos.logback.core.ConsoleAppender">
        <Append>true</Append>
        <Encoding>utf-8</Encoding>
        <encoder>
            <pattern>%-d{yyyy-MM-dd HH:mm:ss} [ %t:%r ] - [ %p ] %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>
    <logger name="freemarker.cache" level="ERROR"/>
    <logger name="com.opensymphony.xwork2" level="ERROR"/>
    <logger name="freemarker.beans" level="ERROR"/>
    <logger name="org.apache.struts2" level="ERROR"/>
    <root level="DEBUG">
        <appender-ref ref="D"/>
        <appender-ref ref="E"/>
        <appender-ref ref="F"/>
    </root>
</configuration>